<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="motor" params="name length radius">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
        <origin xyz="${length/2} 0 0" rpy="0 ${pi/2} 0"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${length}" radius="${radius}"/>
        </geometry>
        <origin xyz="${length/2} 0 0" rpy="0 ${pi/2} 0"/>
      </collision>
      <inertial>
        <mass value="${motor_mass}"/>
        <origin xyz="${length/2} 0 0" rpy="0 ${pi/2} 0"/>
        <xacro:cylinder_inertia m="${motor_mass}" r="${radius}" h="${length}"/>
      </inertial>
    </link>
  </xacro:macro>
</robot>
